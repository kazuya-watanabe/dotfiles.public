	ll = log --graph --abbrev-commit
	m = merge
	pl = pull
	ps = push
	rb = rebase
	rbi = rebase --interactive --auto-squash
	rs = reset
	rss = reset --soft
	rsh = reset --hard
	s = status --branch --short
	sl = status --branch
	st = stash
	std = stash drop
	stl = stash list
	stp = stash pop
	sts = stash save
	t = tag
	tl = tag --list
	td = tag --delete

[core]
	autocrlf = false
	editor = vim
	ignoreCase = false
	pager = delta
	quotePath = false
	symlinks = true

