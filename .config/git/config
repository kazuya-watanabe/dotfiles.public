[alias]
	a = add

	b = branch
	bl = branch --verbose
	br = branch --remote
	bd = branch -d

	c = checkout
	cb = checkout -b
	bc = checkout -b
	co = checkout

	C = commit --verbose
	Ca = commit --ammend --verbose
	Cr = revert

	d = diff
	ds = diff --name-status

	f = fetch

	l = log --graph --oneline
	ll = log --graph --abbrev-commit

	ls = ls-files
	lso = ls-files --others --exclude-standard

	m = merge

	p = pull
	P = push

	R = rebase
	Ri = rebase --interactive --auto-squash

	r = reset
	rs = reset --soft
	rh = reset --hard

	s = status --branch --short
	sl = status --branch
	st = status --branch --short

	Sd = stash drop
	Sl = stash list
	Sp = stash pop
	Ss = stash save

	t = tag
	tl = tag --list
	td = tag --delete

[core]
	autocrlf = false
	editor = vim
	ignoreCase = false
	pager = delta
	quotePath = false
	symlinks = true

[credential "https://github.com"]
	helper = 
	helper = !gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !gh auth git-credential

[delta]
	keep-plus-minus-markers = true
	line-numbers = true
	navigate = true
	side-by-side = true
	syntax-theme = OneHalfDark

[diff]
	algorithm = histogram
	colorMoved = default

[fetch]
	prune = true

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[pull]
	ff = only
	rebase = true
	autostash = true

[push]
	default = current

