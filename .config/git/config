	ba = branch --remotes
	bc = checkout -b
	bd = branch -d
	c = checkout
	cb = checkout -b
	cm = commit --verbose
	cma = commit --ammend --verbose
	cmr = revert
	d = diff
	ds = diff --name-status
	f = fetch
